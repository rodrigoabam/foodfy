{% extends "layout.njk" %}

{% block head %}
<title>Foodfy - {{ dish.name }}</title>
<link rel="stylesheet" href="/styles/dishes.css">
{% endblock %}

{% block content %}

<main>
       <div class="header">
           <img src="imagens/{{ dish.id }}.png" alt="Imagem do  {{ dish.id }}">
           <h2>{{ dish.name }}</h2>
           <p>{{ dish.author }}</p>
       </div>
       <div class="ingredients">
           <h3>Ingredientes <span>esconder</span> </h3>
           <div class="content">
            <ul>
               {% for ingredient in dish.ingredients %}
                    <li>{{ ingredient.name }}</li>
               {% endfor %}
           </ul>
           </div>
       </div>
       <div class="preparation">
           <h3>Modo de preparo <span>esconder</span> </h3>
            <div class="content">
            <ul>
               {% for step in dish.preparation %}
                    <li>{{ step.step }}</li>
               {% endfor %}
           </ul>
            </div>
       </div>
       <div class="info-add">
           <h3>Informações adicionais <span>mostrar</span> </h3>
           <div class="content">
            <p>{{ dish.infos }}</p>
           </div>
       </div>
    
</main>

{% endblock %}