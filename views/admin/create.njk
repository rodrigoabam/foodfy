{% extends "admin/layout.njk" %}

{% block head %}
<title>Foodfy - Admin Create</title>
{% endblock %}

{% block content %}

<main>
    <form class="page-admin" method="POST" action="/admin/recipes">

        <div class="header-content">
            <h2>Criando receita</h2>
            <button type="submit">Salvar receita</button>
        </div>

        <div class="item">
            <div>Nome da receita</div>
            <div>
                <input type="text" name="name">
            </div>
        </div>

         <div class="item">
            <div>Imagem da receita</div>
            <div>
                <input type="url" name="photo_recipe">
            </div>
        </div>

        <div class="item" id="ingredientes">
            <div>Ingredientes</div>
            <div class="ingredients">
                <input type="text" name="ingredients[]" value="">
            </div>
        </div>
        <button type="button" class="add-ingredient">Adicionar novo ingrediente</button>

        <div class="item" id="preparations">
            <div>Modo de preparo</div>
            <div class="preparations">
                <input type="text" name="preparations[]" value="">
            </div>
        </div>
        <button type="button" class="add-preparation">Adicionar novo passo</button>

        <div class="item">
            <div>Informações adicionais</div>
            <div>
                <textarea name="add-info">
                    
                </textarea>
            </div>
        </div>

        </div>
        </div>
    </form>
</main>

{% endblock %}